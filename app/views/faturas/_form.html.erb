<%= form_for(@fatura) do |f| %>
  <% if @fatura.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fatura.errors.count, "error") %> prohibited this fatura from being saved:</h2>

      <ul>
      <% @fatura.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cliente_id %><br />
    <%= f.select :cliente_id, @clientes.collect { |c| ["#{c.numero_inscricao} - #{c.nome}", c.id] }, { :prompt => 'Escolha o cliente' } %>
  </div>
  <div class="field">
    <%= f.label :data_vencimento %><br />
    <%= f.date_select :data_vencimento %>
  </div>
  <div class="field">
    <%= f.label :pacote_id %><br />
    <%= f.select :pacote_id, @pacotes.collect { |c| ["#{c.nome} - R$#{c.valor}", c.id] }, { :prompt => 'Escolha o pacote' } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= form_for(@agenda) do |f| %>
  <% if @agenda.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@agenda.errors.count, "error") %> prohibited this agenda from being saved:</h2>

      <ul>
      <% @agenda.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :data_agendada %><br />
    <%= f.date_select :data_agendada %>
  </div>
  <div class="field">
    <%= f.label :data_realizada %><br />
    <%= f.date_select :data_realizada %>
  </div>
  <div class="field">
    <%= f.label :cliente_id %><br />
    <%= f.select :cliente_id, @clientes.collect { |c| [c.nome, c.id] }, { :prompt => 'Escolha o cliente' } %>
  </div>
  <div class="field">
    <%= f.label :instalador_id %><br />
    <%= f.select :instalador_id, @instaladores.collect { |c| [c.nome, c.id] }, { :prompt => 'Escolha o instalador' } %>
  </div>
  <div class="field">
    <%= f.label :pacote_id %><br />
    <%= f.select :pacote_id, @pacotes.collect { |c| [c.nome, c.id] }, { :prompt => 'Escolha o pacote' } %>
  </div>
  <div class="field">
    <%= f.label :descricao %><br />
    <%= f.text_field :descricao %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
